<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mikola.podcast.activitys.PodcastActivity">

    <RelativeLayout
        android:id="@+id/top_layout_podcast_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/shadow_background"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/download_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_button"
            android:padding="@dimen/notification_padding"
            android:src="@drawable/icon_download" />

        <ImageButton
            android:id="@+id/back_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_button"
            android:padding="@dimen/notification_padding"
            android:src="@drawable/icon_back" />

        <com.example.mikola.podcast.views.CustomFontTextView
            android:id="@+id/podcast_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textSize="30sp" />

    </RelativeLayout>


    <ListView
        android:id="@+id/podcast_description"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/player_layout_podcast_activity"
        android:layout_below="@+id/top_layout_podcast_activity"
        android:divider="@android:color/white"
        android:dividerHeight="10.0sp"
        android:paddingLeft="@dimen/notification_padding"
        android:paddingRight="@dimen/notification_padding" />


    <RelativeLayout
        android:id="@+id/player_layout_podcast_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:padding="8dp"
        android:weightSum="100">


        <ImageButton
            android:id="@+id/play_pause_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/selector_button"
            android:gravity="center"
            android:padding="5dp"
            android:src="@drawable/icon_play" />


        <LinearLayout
            android:id="@+id/time_player_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <com.example.mikola.podcast.views.CustomFontTextView
                android:id="@+id/time_this_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="13sp"
                android:typeface="monospace" />

            <com.example.mikola.podcast.views.CustomFontTextView
                android:id="@+id/time_all_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|center_vertical"
                android:textSize="10sp"
                android:typeface="monospace" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/progres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_toLeftOf="@+id/time_player_layout"
            android:layout_toRightOf="@+id/play_pause_btn" />

    </RelativeLayout>
</RelativeLayout>
